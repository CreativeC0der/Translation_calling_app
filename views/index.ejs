<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Audio Call</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script src="/socket.io/socket.io.js"></script>
  <script src="https://cdn.tailwindcss.com"></script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <script src="https://unpkg.com/audiomotion-analyzer/dist"></script>
</head>

<body class="flex items-center justify-center h-screen bg-gradient-to-br from-gray-900 to-black text-white">

  <div
    class="w-full max-w-4xl p-6 bg-white/10 backdrop-blur-lg rounded-2xl shadow-lg border border-white/20 text-center">
    <h2 class="text-3xl font-semibold mb-4">Audio Call</h2>

    <!-- User Name Input -->
    <div class="flex items-center space-x-4 mb-4">
      <input id="userName" type="text" placeholder="Enter your name"
        class="flex-1 px-4 py-3 text-lg bg-white/20 backdrop-blur-md rounded-lg border border-white/30 focus:outline-none focus:ring-2 focus:ring-blue-500 text-white placeholder-gray-300 text-center">
      <button id="registerName"
        class="px-5 py-3 bg-blue-500 hover:bg-blue-600 text-white text-lg rounded-lg shadow-md transition">Register</button>
    </div>

    <!-- Contact Dropdown -->
    <select id="contactList"
      class="w-full px-4 py-3 text-lg bg-white/20 backdrop-blur-md rounded-lg border border-white/30 focus:outline-none focus:ring-2 focus:ring-blue-500 text-white placeholder-gray-300 mb-4 text-center">
      <option value="" disabled selected>Select a contact</option>
      <option value="Alice">Alice</option>
      <option value="Bob">Bob</option>
      <option value="Charlie">Charlie</option>
    </select>

    <!-- Video Call Section -->
    <div id="canvas">
      <audio id="remoteAudio" autoplay></audio>
    </div>

    <p id="status" class="text-lg text-gray-300 mt-6">Waiting to start...</p>

    <!-- Call Buttons -->
    <div class="flex justify-center gap-6 mt-6">
      <button id="startCall"
        class="px-6 py-3 bg-green-500 hover:bg-green-600 text-white text-lg rounded-full shadow-md transition">
        ‚úÜ Start Call
      </button>
      <button id="hangUp"
        class="px-6 py-3 bg-red-500 hover:bg-red-600 text-white text-lg rounded-full shadow-md transition opacity-50 cursor-not-allowed"
        disabled>
        ‚ï≥ Hang Up
      </button>
      <button id="muteMicButton"
        class="px-6 py-3 bg-yellow-500 hover:bg-yellow-600 text-white text-lg rounded-full shadow-md transition">
        üéôÔ∏è Mute Mic
      </button>
    </div>
  </div>

  <script>
    document.getElementById('registerName').addEventListener('click', function () {
      const nameInput = document.getElementById('userName');
      if (nameInput.value.trim() !== "") {
        nameInput.disabled = true;
        this.disabled = true;
        this.textContent = "Registered";
      }
    });
  </script>
  <script type="module" src="javascripts/openai_connect.js"></script>
  <script type="module" src="javascripts/script.js"></script>
</body>

</html>